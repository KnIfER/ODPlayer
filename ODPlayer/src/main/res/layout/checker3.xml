<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:UIStyles="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        >

        <com.knziha.filepicker.widget.CircleCheckBox
            android:id="@+id/check1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            UIStyles:dim1="6dp"
            app:color_background="#FF3F51B5"
            app:color_border="#FFF"
            app:size="25dp"
            android:src="@drawable/clippin"
            />
        <!--<com.knziha.filepicker.widget.CircleCheckBox
            android:id="@+id/check2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            UIStyles:dim1="6dp"
            app:color_background="#FF3F51B5"
            app:color_border="#FFF"
            app:size="25dp"
            android:src="@drawable/ic_update_intime"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />-->
        <com.knziha.filepicker.widget.CircleCheckBox
            android:id="@+id/check3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            UIStyles:dim1="6dp"
            app:color_background="#FF3F51B5"
            app:color_border="#FFF"
            app:size="25dp"
            android:src="@drawable/ic_auto_unfold"
            android:layout_marginStart="10dp"
            />
        <com.knziha.filepicker.widget.CircleCheckBox
            android:id="@+id/check2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            UIStyles:dim1="6dp"
            app:color_background="#FF3F51B5"
            app:color_border="#FFF"
            app:size="25dp"
            android:src="@drawable/equi_lnk"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="#fff"
        android:gravity="center|bottom"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="5dp"
        android:paddingBottom="8dp"
        />

</FrameLayout>